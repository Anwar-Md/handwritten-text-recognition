{
    "name": "My Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12",
    "customizations": {
      "vscode": {
        "settings": {
          "python.pythonPath": "/usr/local/bin/python"
        }
      }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "runArgs": [
      "-e", "OPENAI_API_KEY=${OPENAI_API_KEY}"
    ]
  }
  